<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title }}</title>
  <link rel="stylesheet" href="/css/style.css">
  {{!-- Custom event handling --}}
  <script src="/js/ui-handling.js"></script>
  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>

	{{>header}}
	
	<img src="{{caseStudy.heroImage}}"
 		alt="Case Study Banner" 
 		class="case-study-banner"/>

	<div class="case-study-body">

		{{!-- Case Study Summary --}}

		<div class="project-outline minor">
			<div class="outline-detail">
				<span class="detail-header minor">start date</span>
				<span class="detail-value">{{monyyyy caseStudy.startDate}}</span>
			</div>
			<div class="outline-detail">
				<span class="detail-header minor">status</span>
				<span class="detail-value capitalize">{{caseStudy.status}}</span>
			</div>
			<div class="outline-detail">
				<div id="view-site" class="detail-value capitalize"><a href={{caseStudy.projectUrl}}>view site</a></div>
			</div>
			<div class="outline-detail">
				<span class="detail-header minor">share</span>
				<span class="detail-value capitalize">
					<a href="{{caseStudy.facebookShare}}">
						<img src="img/ic_facebook_share.svg" alt="Facebook" class="micro">
					</a>
					<a href="{{caseStudy.twitterShare}}">
						<img src="img/ic_twitter.svg" alt="Twitter" class="micro">
					</a>
					<a href="{{caseStudy.linkedInShare}}">
						<img src="img/ic_linkedin.svg" alt="Linked In" class="micro">
					</a>
				</span>
			</div>
		</div>
		<div class="project-outline major">
			<div class="outline-detail major">
				<div class="detail-header major">project summary</div>
				<div class="detail-value major">{{caseStudy.projectSummary}}</div>
			</div>
			<div class="outline-detail major">
				<div class="detail-header major">deliverables</div>
				<div class="detail-value major">{{caseStudy.deliverables}}</div>
			</div>
			<div class="outline-detail major">
				<div class="detail-header major">client</div>
				<div class="detail-value major">
					{{caseStudy.clientName}}
					<a href="{{caseStudy.clientLinkedIn}}">
						<img src="img/ic_linkedin_profile.svg" alt="Linked In" class="micro">
					</a>
				</div>
			</div>
		</div>

		{{{body}}}

		{{!-- Previous case studies --}}
		<div class="other-case-studies float-left">
			<h3 class="highlighted-header">
				view on behance
				<img class="micro" src="img/ic_open_tab.svg" alt="Opens in new tab">
			</h3>
			<p>Appinventive- Branding India's leading mobile app development company (TODO)</p>
		</div>

		{{!-- Next case study --}}
		<div class="other-case-studies float-right">
			<h3 class="highlighted-header">read next case study</h3>
			<p>VEME- Empowering the future of social media and decentralised media on blockchain (TODO)</p>
		</div>
		<div style="clear: both;"></div> <!-- Clear the floats -->

	</div>

	{{>footer}}
  </body>
</html>
